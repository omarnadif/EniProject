{% block css %}
    <link type="text/css" rel="stylesheet" href="" />
{% endblock %}

{% block title %}{{ parent() }} Ville{% endblock %}
{% block main %}


    <h2 class="display-6 text-center mb-4">Gestion des Villes</h2>

    {#<form class="navbar-form form-control-sm">
        <div class="input-group search-box mb-4">
            <h6 class="text-justify mt-2 mr-3">Le nom contient: </h6>
            <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>

            <input type="text" id="search" class="form-control" placeholder="">

