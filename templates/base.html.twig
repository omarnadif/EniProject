<script>
    // Get the current theme from local storage or set it to 'light' by default
    const currentTheme = localStorage.getItem('theme') || 'light';

    // Set the current theme as the body class
    document.body.classList.add(currentTheme);

    // Set the button text based on the current theme
    const toggleThemeButton = document.getElementById('toggleTheme');
    let buttonText = currentTheme === 'dark' ? 'Light mode' : 'Dark mode';
    toggleThemeButton.textContent = buttonText;

    // Toggle the theme on button click
    toggleThemeButton.addEventListener('click', () => {
        // Toggle the class on the body
        document.body.classList.toggle('dark');

        // Get the new theme from the body class
        const newTheme = document.body.classList.contains('dark') ? 'dark' : 'light';

        // Set the new theme in local storage
        localStorage.setItem('theme', newTheme);

        // Update the button text
        buttonText = newTheme === 'dark' ? 'Light mode' : 'Dark mode';
        toggleThemeButton.textContent = buttonText;
    });
</script>
