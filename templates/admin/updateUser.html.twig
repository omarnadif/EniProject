{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block main %}
    {{ form_start(formParticipant) }}
    <div class="col-md-7 col-lg-5 ml-5">
        <h4 class="mb-3">Modifier un Utilisateur </h4>
        <form class="needs-validation" novalidate="">
            <div class="row g-3">


                <div class="col-12">
                    <label for="nom" class="form-label">Pseudo</label>
                    {{ form_widget(formParticipant.pseudo) }}
                </div>
                <div class="col-12">
                    <label for="nom" class="form-label">Prenom</label>
                    {{ form_widget(formParticipant.prenom) }}
                </div>

                <div class="col-12">
                    <label for="nom" class="form-label">Nom</label>
                    {{ form_widget(formParticipant.nom) }}
                </div>
                <div class="col-12">
                    <label for="nom" class="form-label">Email</label>
                    {{ form_widget(formParticipant.email) }}
                </div>


                <div class="col-12">
                    <label for="nom" class="form-label">Telephone</label>
                    {{ form_widget(formParticipant.telephone) }}
                </div>



            </div>

            <hr class="my-4">


            {{ form_end(formParticipant) }}
    </div>
{% endblock %}
